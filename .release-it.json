{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCommits": true
  },
  "github": {
    "autoGenerate": true,
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {"publishArgs": ["--access public", "--provenance"]},
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": "conventionalcommits",
      "types": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {}
      ]
    }
  }
}

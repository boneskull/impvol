{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    // only pin dev deps
    // https://docs.renovatebot.com/presets-config/#configjs-lib
    'config:js-lib',
  ],
  packageRules: [
    {
      matchFilenames: ['.nvmrc'],
      automerge: true,
    },
  ],
  // https://docs.renovatebot.com/configuration-options/#lockfilemaintenance
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
  },
}

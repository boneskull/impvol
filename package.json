{
  "name": "impvol",
  "version": "0.1.14",
  "type": "module",
  "description": "Import scripts and modules from virtual filesystems",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/impvol.git"
  },
  "author": {
    "name": "Christopher Hiller",
    "email": "boneskull@boneskull.com"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE.md",
    "dist",
    "package.json",
    "src",
    "README.md"
  ],
  "keywords": [
    "memfs",
    "vfs",
    "fs",
    "virtual",
    "import",
    "require",
    "loader",
    "nodejs",
    "script",
    "cjs",
    "esm",
    "module"
  ],
  "scripts": {
    "build": "tshy",
    "format": "prettier .",
    "lint": "eslint . --max-warnings 0",
    "lint:commit": "commitlint",
    "lint:knip": "knip",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \".github/**/*.md\"",
    "lint:spelling": "cspell \"**\" \".github/**/*\"",
    "lint:staged": "lint-staged",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "test": "node --test --import tsx ./test/impvol.spec.ts",
    "tsc": "tsc -p tsconfig.tsc.json"
  },
  "peerDependencies": {
    "memfs": "^4.0.0"
  },
  "dependencies": {
    "debug": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.34.0",
    "@stylistic/eslint-plugin": "5.2.3",
    "@types/debug": "4.1.12",
    "@types/node": "22.18.0",
    "cspell": "9.2.0",
    "eslint": "9.34.0",
    "eslint-plugin-n": "17.21.3",
    "eslint-plugin-perfectionist": "4.15.0",
    "husky": "9.1.7",
    "knip": "5.63.0",
    "lint-staged": "16.1.5",
    "markdownlint-cli2": "0.18.1",
    "markdownlint-cli2-formatter-pretty": "0.0.8",
    "memfs": "4.24.0",
    "prettier": "3.6.2",
    "prettier-plugin-curly": "0.3.2",
    "prettier-plugin-jsdoc": "1.3.3",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-pkg": "0.21.2",
    "prettier-plugin-sh": "0.18.0",
    "tshy": "3.0.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ],
      "footer-max-line-length": [
        0
      ],
      "header-max-length": [
        0
      ],
      "subject-case": [
        0
      ],
      "subject-full-stop": [
        0
      ]
    }
  },
  "knip": {
    "entry": [
      "src/index.ts",
      "src/impvol-hooks.ts",
      "test/**/*.spec.ts"
    ],
    "ignoreDependencies": [
      "markdownlint-cli2-formatter-pretty"
    ],
    "ignoreExportsUsedInFile": {
      "interface": true,
      "type": true
    },
    "project": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write",
      "cspell lint --no-must-find-files"
    ],
    "*.md": "markdownlint-cli2",
    "*.ts": "eslint --fix"
  },
  "markdownlint-cli2": {
    "config": {
      "ul-style": {
        "style": "dash"
      },
      "ul-indent": {
        "indent": 2
      },
      "commands-show-output": false,
      "no-bare-urls": false,
      "line-length": false,
      "no-emphasis-as-header": false,
      "no-duplicate-header": false,
      "header-increment": false,
      "no-blanks-blockquote": false,
      "headings": false
    },
    "ignores": [
      "**/node_modules/**",
      "**/dist/**",
      ".github/CODE_OF_CONDUCT.md",
      "**/CHANGELOG.md"
    ],
    "outputFormatters": [
      [
        "markdownlint-cli2-formatter-pretty",
        {
          "appendLink": true
        }
      ]
    ],
    "showFound": true,
    "noProgress": false
  },
  "prettier": {
    "overrides": [
      {
        "files": ".nvmrc",
        "options": {
          "parser": "yaml"
        }
      }
    ],
    "plugins": [
      "prettier-plugin-curly",
      "prettier-plugin-sh",
      "prettier-plugin-organize-imports",
      "prettier-plugin-pkg",
      "prettier-plugin-jsdoc"
    ],
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "endOfLine": "auto",
    "jsdocCommentLineStrategy": "multiline",
    "tsdoc": true
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  }
}
